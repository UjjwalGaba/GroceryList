<!-- displaying the update to form to update the data in database with unique id -->
<h1>Groceries Details</h1>
<form method="post">
    <fieldset class="form-group">
        <label for="groceries" class="control-label col-2">Name: *</label>
        <input class="form-control" name="groceries" id="groceries" value="{{grocery.groceries}}" required>
    </fieldset>
    <fieldset class="form-group">
        <label for="quantity" class="control-label col-2">Quantity: *</label>
        <input class="form-control" name="quantity" id="quantity" value="{{grocery.quantity}}" required>
    </fieldset>
    <div class="offset-2">
        <button class="btn btn-primary">Save</button>
    </div>
</form>